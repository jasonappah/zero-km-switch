{
    // TAILSCALE!!!
    // needed a linux dev env so i just spun up a code-server instance on railway, hence the need to run tailscale in userspace
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Mount Remote",
        "type": "shell",
        "command": "sshfs json@raspberrypi:/home/json/zero-switch ./.mount",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": []
      },
      {
        "label": "Copy to Remote",
        "type": "shell",
        "command": "rsync -vazC --delete ./ json@raspberrypi:/home/json/zero-switch",
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": true,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run Tailscaled",
        "command": "tailscaled --tun=userspace-networking --socks5-server=localhost:1055",
        "type": "shell",
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": true,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
        },
        "problemMatcher": []
      }
    ]
  }